<?xml version="1.0" encoding="utf-8"?>
<com.whompum.PennyFlip.Widgets.HeaderItemLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            tools:text="Title"
            style="@style/StyleTimestamp"/>

    <LinearLayout
            android:layout_below="@id/id_global_timestamp"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        tools:textColor="@color/light_green"
        tools:text="Car Wash"
        android:id="@id/id_global_title"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/dimen_text_mediano"
        android:paddingEnd="2dp"
        android:layout_weight="10"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <currencyedittext.whompum.com.currencyedittext.CurrencyEditText
            tools:text="$44.72"
            style="@style/StyleCurrencyEditText.Big"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:textColor="@color/light_green"
            android:layout_gravity="end|center"/>
    </LinearLayout>

    </RelativeLayout>




</com.whompum.PennyFlip.Widgets.HeaderItemLinearLayout>