<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/dimen_screen_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        tools:text="Car Wash"
        android:id="@id/id_global_title"
        android:textSize="@dimen/dimen_text_bigboi"
        android:textColor="@color/darkest_grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        tools:text="Updated 10:20 PM"
        android:id="@id/id_global_timestamp"
        android:textColor="@color/darkest_grey"
        android:layout_below="@id/id_global_title"
        android:layout_marginTop="8dp"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/icon_calendar_grey_small"
        android:textSize="@dimen/dimen_text_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <currencyedittext.whompum.com.currencyedittext.CurrencyEditText
        style="@style/StyleCurrentEditText"
        android:textColor="@color/darkest_grey"
        android:layout_alignBaseline="@id/id_global_title"
        android:id="@id/id_global_total_display"
        android:drawableStart="@drawable/icon_statistics_dark"
        android:drawableLeft="@drawable/icon_statistics_dark"
        android:drawablePadding="4dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/string_view"
        android:id="@+id/source_list_local_select"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="4dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColor="@color/light_blue"
        android:layout_below="@id/id_global_total_display"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>