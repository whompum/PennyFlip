<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="6dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:selectableItemBackground"
    android:layout_marginStart="@dimen/dimen_padding_hor_base"
    android:layout_marginEnd="@dimen/dimen_padding_hor_base"
    android:layout_width="match_parent"
    android:layout_height="102dp">

    <View
        tools:background="@color/dark_green"
        android:id="@+id/id_local_veneer"
        android:layout_width="3dp"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:layout_marginStart="@dimen/dimen_padding_hor_large"
        android:layout_marginEnd="@dimen/dimen_padding_hor_large"
        android:layout_marginBottom="@dimen/dimen_padding_ver_base"
        android:layout_marginTop="@dimen/dimen_padding_ver_base"
        android:paddingStart="@dimen/dimen_padding_hor_base"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        tools:text="Yooooo"
        android:layout_marginTop="-6dp"
        android:id="@id/id_global_title"
        android:textSize="@dimen/dimen_text_bigboi"
        android:textColor="@color/darkest_grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        tools:text="10:20 PM"
        style="@style/StyleTimestamp"
        android:layout_gravity="end|top"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/icon_calendar_grey_small"/>

    <currencyedittext.whompum.com.currencyedittext.CurrencyEditText
        tools:textColor="@color/dark_green"
        style="@style/StyleCurrencyEditText"
        android:layout_gravity="bottom|start"
        android:textColor="@color/darkest_grey"/>

    </FrameLayout>

</android.support.v7.widget.CardView>
