<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/dashboard"
    android:padding="@dimen/screen_padding"
    android:background="@drawable/drawable_shape_background_rounded_bottom"
    android:layout_weight="5"
    android:layout_width="match_parent"
    android:layout_height="0dp">


<android.support.v7.widget.AppCompatImageButton
    app:srcCompat="@drawable/ic_svg_star"

    android:id="@id/id_dashboard_goal"
    android:onClick="onGoalClicked"
    android:layout_marginLeft="@dimen/dimen_margin_dashboard_icon"
    android:layout_marginStart="@dimen/dimen_margin_dashboard_icon"
    android:layout_marginTop="@dimen/dimen_margin_dashboard_icon"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:layout_gravity="start|top"
    android:layout_width="@dimen/dashboard_icon_size"
    android:layout_height="@dimen/dashboard_icon_size" />

<android.support.v7.widget.AppCompatImageButton
    android:id="@id/id_dashboard_callibrate"
    android:onClick="onCallibrateClicked"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:layout_marginRight="@dimen/dimen_margin_dashboard_icon"
    android:layout_marginEnd="@dimen/dimen_margin_dashboard_icon"
    android:layout_marginTop="@dimen/dimen_margin_dashboard_icon"
    app:srcCompat="@drawable/ic_svg_callibrate"
    android:layout_gravity="end|top"
    android:layout_width="@dimen/dashboard_icon_size"
    android:layout_height="@dimen/dashboard_icon_size" />

    <!--Keep the width as match_parent so TextView can wrap itself
        If its width is > screen width-->
<currencyedittext.whompum.com.currencyedittext.CurrencyEditText
    tools:text="$87.22"
    android:id="@id/id_dashboard_value"
    android:background="@android:color/transparent"
    android:enabled="false"
    android:textSize="42sp"
    android:textColor="@color/white"
    android:textStyle="bold"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />


<TextView
    android:text="@string/string_null_transactionlist"

    android:textSize="@dimen/text_normal"
    android:textColor="@color/white"
    android:textStyle="normal"

    android:id="@id/id_dashboard_timestamp"

    android:layout_gravity="bottom|start"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />


</FrameLayout>