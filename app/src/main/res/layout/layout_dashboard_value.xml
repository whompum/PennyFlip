<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/dashboard"
    android:padding="@dimen/dimen_screen_padding"
    android:background="@color/light_blue"
    android:layout_weight="4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


<android.support.v7.widget.AppCompatImageButton
    app:srcCompat="@drawable/ic_svg_star"

    android:id="@id/id_dashboard_goal"
    android:onClick="onGoalClicked"
    android:layout_marginLeft="@dimen/dimen_margin_dashboard_icon"
    android:layout_marginStart="@dimen/dimen_margin_dashboard_icon"
    android:layout_marginTop="@dimen/dimen_margin_dashboard_icon"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_width="@dimen/dashboard_icon_size"
    android:layout_height="@dimen/dashboard_icon_size" />

<android.support.v7.widget.AppCompatImageButton
    android:id="@id/id_dashboard_callibrate"
    android:onClick="onCallibrateClicked"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:layout_marginRight="@dimen/dimen_margin_dashboard_icon"
    android:layout_marginEnd="@dimen/dimen_margin_dashboard_icon"
    android:layout_marginTop="@dimen/dimen_margin_dashboard_icon"
    app:srcCompat="@drawable/ic_svg_callibrate"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_width="@dimen/dashboard_icon_size"
    android:layout_height="@dimen/dashboard_icon_size" />

    <!--Keep the width as match_parent so TextView can wrap itself
        If its width is > screen width-->
<currencyedittext.whompum.com.currencyedittext.CurrencyEditText
    style="@style/StyleCurrentEditTextLarge"
    android:id="@id/id_dashboard_value"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />


<TextView
    style="@style/StyleTotalLabel"
    android:text="@string/string_total"

    android:id="@id/id_dashboard_total_label"
    android:layout_alignLeft="@id/id_dashboard_value"
    android:layout_alignStart="@id/id_dashboard_value"
    android:layout_above="@+id/id_dashboard_value"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />


</RelativeLayout>