<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageButton
        android:background="@drawable/checkable_circles"
        android:id="@+id/id_local_checkable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        xmlns:tools="http://schemas.android.com/tools"
        tools:text="@string/string_income"
        android:id="@+id/id_local_label"
        android:textSize="@dimen/dimen_text_mediano"
        android:layout_gravity="center_vertical"
        android:textColor="@color/milk_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</merge>