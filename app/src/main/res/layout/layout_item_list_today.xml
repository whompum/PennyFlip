<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="8dp"
    android:padding="24dp"
    android:background="@color/milk_white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        tools:text="9:41 AM"

        android:textSize="@dimen/text_small"
        android:textColor="@color/darkest_grey"

        android:id="@id/id_dashboard_transactionlist_timestamp"

        android:layout_gravity="start|center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <currencyedittext.whompum.com.currencyedittext.CurrencyEditText
        tools:text="$21.72"

        android:enabled="false"
        android:background="@android:color/transparent"
        android:textColor="@color/light_green"
        android:textSize="@dimen/text_bigboi"
        android:textStyle="bold"
        android:id="@id/id_dashboard_transactionlist_total"

        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TextView
        tools:text="Eating Out"

        android:textColor="@color/darkest_grey"

        android:id="@id/id_dashboard_transactionlist_source"

        android:layout_gravity="end|center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</FrameLayout>