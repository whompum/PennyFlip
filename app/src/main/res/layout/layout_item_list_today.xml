<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        tools:text="9:41 AM"

        android:textSize="@dimen/text_teeny"
        android:textColor="@color/dark_grey"

        android:id="@id/id_dashboard_transactionlist_timestamp"

        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TextView
        tools:text="@string/string_spent"

        android:textColor="@color/light_red"

        android:id="@id/id_dashboard_transactionlist_transaction_type"

        android:layout_marginStart="64dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <currencyedittext.whompum.com.currencyedittext.CurrencyEditText
        tools:text="$21.72"

        android:enabled="false"
        android:background="@android:color/transparent"
        android:textColor="@color/light_blue"
        android:textSize="@dimen/text_bigboi"

        android:id="@id/id_dashboard_transactionlist_total"

        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TextView
        tools:text="Eating Out"

        android:textColor="@color/dark_grey"

        android:id="@id/id_dashboard_transactionlist_source"

        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>