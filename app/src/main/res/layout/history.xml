<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@color/light_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@id/id_up_navigation"
            app:srcCompat="@drawable/ic_svg_chevron"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_width="48dp"
            android:layout_height="48dp" />

        <TextView
            android:id="@+id/historyTextView"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/id_up_navigation"
            android:layout_toEndOf="@id/id_up_navigation"
            android:text="@string/string_history"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_text_bigboi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@id/id_history_time_range"
            android:layout_marginTop="8dp"
            android:gravity="end"
            android:paddingEnd="8dp"
            app:overlapAnchor="false"
            android:background="@null"
            android:layout_alignParentEnd="true"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


    <com.github.badoualy.datepicker.DatePickerTimeline
        app:mti_primaryColor="@color/light_blue"
        android:id="@id/id_history_time_picker"
        app:mti_tabBeforeSelectionColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        xmlns:tools="http://schemas.android.com/tools"
        tools:listitem="@layout/history_list_item"
        android:id="@id/id_history_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>