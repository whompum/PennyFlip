<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:layout_marginTop="20dp"
        android:paddingEnd="40dp"
        android:background="@drawable/background_rounded_rect_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:alpha="0"
                android:textStyle="bold"
                android:id="@+id/id_title_error"
                android:text="That title is taken!"
                android:textColor="@color/color_light_orange"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/string_title"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/darkest_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginStart="8dp"
                android:weightSum="10"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="22dp"
                android:paddingBottom="22dp"
                android:background="@drawable/background_rounded_rect_blue"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/id_source_name_editor"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:inputType="textFilter"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:hint="Enter Your Title"
                    android:textColorHint="@color/white"
                    android:background="@android:color/transparent"
                    android:layout_weight="8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/id_text_limit_display"
                    android:text="20/20"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:gravity="end"
                    android:layout_gravity="end|center_vertical"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:gravity="end|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/id_dialog_cancel"
                android:text="@android:string/cancel"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/id_dialog_done"
                android:layout_marginStart="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:text="@string/string_done"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/id_source_type_display"
        android:src="@drawable/graphic_source_plus"
        android:layout_width="56dp"
        android:layout_height="56dp" />

</FrameLayout>