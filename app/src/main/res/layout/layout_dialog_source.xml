<?xml version="1.0" encoding="utf-8"?>
<com.whompum.pennydialog.dialog.ShadowLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/drawable_shape_background_rounded_right"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <FrameLayout
        android:padding="@dimen/screen_padding"
        android:id="@id/id_source_dialog_header"
        android:background="@drawable/drawable_shape_background_flat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            tools:text="Enter Source Name Here"
            android:drawableStart="@drawable/ic_svg_search"
            android:drawableLeft="@drawable/ic_svg_search"
            android:backgroundTint="@color/white"
            android:drawablePadding="8dp"
            android:hint="@string/string_source_dialog_search"
            android:textColorHint="@color/white"
            android:id="@id/id_source_dialog_search_view"
            android:textSize="@dimen/text_normal"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        xmlns:tools="http://schemas.android.com/tools"
        tools:listitem="@layout/layout_list_item_dialog_source"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        android:padding="@dimen/screen_padding"
        android:id="@id/id_source_dialog_source_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>

<android.support.design.widget.FloatingActionButton
    style="@style/StyleDashboardAddFab"
    android:id="@id/id_source_dialog_fab"
    android:layout_margin="@dimen/screen_padding"
    android:layout_gravity="bottom|end" />

</FrameLayout>
</com.whompum.pennydialog.dialog.ShadowLayout>