<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--ATTRIBUTES USED FOR STYLING THE SOURCE DATA ACTIVITY UI-->
    <attr name="sourceDataColorPrimary" format="color|reference"/>
    <attr name="sourceDataColorSecondary" format="color|reference"/>
    <attr name="sourceDataTotalLabel" format="string|reference"/>

    <attr name="transactionRatingGraphStyle" format="reference"/>

    <declare-styleable name="TransactionRatingGraph">
        <attr name="dotSize" format="dimension|integer"/>
        <attr name="dotPadding" format="dimension|integer"/>
        <attr name="dotColorOn" format="color|reference"/>
        <attr name="dotColorOff" format="color|reference"/>
        <attr name="invert" format="boolean|reference"/>
    </declare-styleable>

    <declare-styleable name="StatisticsReportItemCurrency">
        <attr name="staticText" format="string|reference"/>
    </declare-styleable>

    <declare-styleable name="PurseTotalView">
        <attr name="NAEnabled" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CircleTotalView">
        <attr name="circleTotalViewValueColor" format="color|reference"/>
        <attr name="circleTotalViewBackgroundColor" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="TotalView">
        <attr name="totalViewSize" format="dimension|integer"/>
        <attr name="totalViewTextScale" format="float"/>
        <attr name="totalViewValue" format="integer"/>
    </declare-styleable>

    <declare-styleable name="TransactionTypeTitleIndicator">
        <attr name="highlight" format="color|reference"/>
        <attr name="isExpanded" format="boolean"/>
    </declare-styleable>


</resources>