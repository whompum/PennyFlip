<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <!--PennyDialog styles-->
    <style name="AddPennyDialogStyle" parent="PennyDialog">
        <item name="pennyFabSource">@drawable/ic_shape_plus</item>
        <item name="pennyTitleText">@string/string_add_dialog</item>
        <item name="pennyTitleTextColor">@android:color/black</item>
        <item name="pennyValueCardColor">@color/light_green</item>
    </style>
    <style name="MinusPennyDialogStyle" parent="PennyDialog">
        <item name="pennyFabSource">@drawable/ic_shape_minus</item>
        <item name="pennyTitleText">@string/string_minus_dialog</item>
        <item name="pennyValueCardColor">@color/light_red</item>
    </style>

    <style name="StyleAddTotalFab">
        <item name="fabSize">normal</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:scaleType">center</item>
        <item name="android:src">@drawable/ic_shape_plus</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StyleMinusTotalFab" parent="StyleAddTotalFab">
        <item name="fabSize">mini</item>
        <item name="android:src">@drawable/ic_shape_minus</item>
    </style>


     <!--MENU STYLES-->
    <style name="StyleMenuCardView">
        <item name="contentPadding">@dimen/dimen_nav_title_padding</item>

        <item name="android:layout_marginTop">@dimen/dimen_nav_cardview_margin</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="StyleMenuTitle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="StyleMenuFab">
        <item name="android:visibility">invisible</item>
        <item name="fabSize">mini</item>
        <item name="android:scaleType">center</item>

        <item name="android:layout_marginRight">@dimen/dimen_nav_fab_margin_hor</item>
        <item name="android:layout_marginEnd">@dimen/dimen_nav_fab_margin_hor</item>
        <item name="android:layout_marginLeft">@dimen/dimen_nav_fab_margin_hor</item>
        <item name="android:layout_marginStart">@dimen/dimen_nav_fab_margin_hor</item>

        <item name="android:layout_marginTop">@dimen/dimen_nav_fab_margin_ver</item>
        <item name="android:layout_marginBottom">@dimen/dimen_nav_fab_margin_ver</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>



</resources>
