<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="sourceDataColorSecondary">@color/light_blue</item>
        <item name="sourceDataColorPrimary">@color/light_green</item>
        <item name="colorControlHighlight">@color/light_grey</item>
    </style>

     <style name="StyleDialogAnimate" parent="Base.Theme.AppCompat.Light.Dialog">
    <item name="android:windowBackground">@null</item>
    <item name="android:windowEnterAnimation">@anim/slide_up</item>
    <item name="android:windowExitAnimation">@anim/slide_left</item>
</style>


    <style name="StyleSourceDataAdded" parent="AppTheme">
        <item name="sourceDataColorPrimary">@color/light_green</item>
        <item name="sourceDataTotalLabel">@string/string_total_added</item>
    </style>
    <style name="StyleSourceDataSpent" parent="AppTheme">
        <item name="sourceDataColorPrimary">@color/light_red</item>
        <item name="sourceDataTotalLabel">@string/string_total_spent</item>
    </style>


    <!--PennyDialog styles-->
    <style name="StylePennyDialogAdd" parent="PennyDialog">
        <item name="pennyFabSource">@drawable/graphic_plus_green</item>
        <item name="pennyTitleText">@string/string_add_dialog</item>
        <item name="pennyTitleTextColor">@color/white</item>
        <item name="pennyValueCardColor">@color/light_green</item>
        <item name="pennyNumbersCardColor">@color/darkest_grey</item>
    </style>
    <style name="StylePennyDialogMinus" parent="PennyDialog">
        <item name="pennyFabSource">@drawable/graphic_minus_red</item>
        <item name="pennyTitleText">@string/string_minus_dialog</item>
        <item name="pennyValueCardColor">@color/light_red</item>
        <item name="pennyNumbersCardColor">@color/darkest_grey</item>
    </style>

    <!--Floating Action Buttons-->
    <style name="StyleFab">
        <item name="fabSize">normal</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:id">@id/id_global_fab</item>
    </style>
    <style name="StyleFab.Add">
        <item name="android:src">@drawable/graphic_plus_green</item>
    </style>
    <style name="StyleFab.Minus">
        <item name="fabSize">mini</item>
        <item name="android:src">@drawable/graphic_minus_red</item>
    </style>


    <!--TIME STAMP STYLES-->
    <style name="StyleTimestamp">
        <item name="android:textSize">@dimen/dimen_text_normal</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:id">@id/id_global_timestamp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="StyleTimestamp.Small">
        <item name="android:textSize">@dimen/dimen_text_small</item>
    </style>
    <style name="StyleTimestamp.Medium">
        <item name="android:textSize">@dimen/dimen_text_mediano</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>


    <!-- Money Displays-->
    <style name="StyleCurrencyEditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:id">@id/id_global_total_display</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="StyleCurrencyEditText.Large">
        <item name="android:textSize">@dimen/dimen_text_OG</item>
    </style>
    <style name="StyleCurrencyEditText.Medium">
        <item name="android:textSize">@dimen/dimen_text_mediano</item>
    </style>
    <style name="StyleCurrencyEditText.Big">
        <item name="android:textSize">@dimen/dimen_text_bigboi</item>
    </style>

    <!--MENU STYLES-->
    <style name="StyleMenuCardView">
        <item name="contentPadding">@dimen/dimen_nav_title_padding</item>

        <item name="android:layout_marginTop">@dimen/dimen_nav_cardview_margin</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StyleMenuTitle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="SourceDialogTheme" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    
    <style name="StyleSourceMasterAddToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/darkest_grey</item>
    </style>

    <style name="StyleIcon">
        <item name="android:padding">12dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_width">@dimen/dimen_icon_size</item>
        <item name="android:layout_height">@dimen/dimen_icon_size</item>
    </style>

    <!-- Nav Tabs -->
    <style name="StyleSourceDataTabContainer">
        <item name="android:layout_weight">3</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="StyleSourceDataTabIcon">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>
    <style name="StyleSourceDataTabLabel">
        <item name="android:visibility">gone</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/dimen_text_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StyleTimestamp.Header">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
    </style>

</resources>
