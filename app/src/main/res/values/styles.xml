<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="sourceDataColorSecondary">@color/light_blue</item>
        <item name="sourceDataColorPrimary">@color/light_green</item>
        <item name="colorControlHighlight">@color/darkest_grey</item>
    </style>

<style name="StyleAddSourceDialog" parent="Base.Theme.AppCompat.Light.Dialog">
    <item name="android:windowBackground">@null</item>
    <item name="android:windowEnterAnimation">@anim/slide_up</item>
    <item name="android:windowExitAnimation">@anim/slide_left</item>
</style>



    <style name="StyleSourceDataAdded" parent="AppTheme">
        <item name="sourceDataColorPrimary">@color/light_green</item>
        <item name="sourceDataTotalLabel">@string/string_total_added</item>
    </style>

    <style name="StyleSourceDataSpent" parent="AppTheme">
        <item name="sourceDataColorPrimary">@color/light_red</item>
        <item name="sourceDataTotalLabel">@string/string_total_spent</item>
    </style>


    <!--PennyDialog styles-->
    <style name="StylePennyDialogAdd" parent="PennyDialog">
        <item name="pennyFabSource">@drawable/ic_shape_plus_green</item>
        <item name="pennyTitleText">@string/string_add_dialog</item>
        <item name="pennyTitleTextColor">@color/white</item>
        <item name="pennyValueCardColor">@color/light_green</item>
        <item name="pennyNumbersCardColor">@color/darkest_grey</item>
    </style>

    <style name="StylePennyDialogMinus" parent="PennyDialog">
        <item name="pennyFabSource">@drawable/ic_shape_minus_red</item>
        <item name="pennyTitleText">@string/string_minus_dialog</item>
        <item name="pennyValueCardColor">@color/light_red</item>
        <item name="pennyNumbersCardColor">@color/darkest_grey</item>
    </style>


    <style name="StyleDashboardAddFab">
        <item name="fabSize">normal</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:scaleType">center</item>
        <item name="android:src">@drawable/ic_shape_plus_green</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StyleDashboardMinusFab" parent="StyleDashboardAddFab">
        <item name="fabSize">mini</item>
        <item name="android:src">@drawable/ic_shape_minus_red</item>
    </style>






    <!--TEXT VIEW STYLES-->
    <style name="StyleTotalLabel">
        <item name="android:textSize">@dimen/dimen_text_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StyleLastUpdate">
        <item name="android:textSize">@dimen/dimen_text_small</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleDateLabel">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dimen_text_mediano</item>
    </style>

    <style name="StyleCurrentEditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="StyleCurrentEditTextLarge" parent="StyleCurrentEditText">
        <item name="android:textSize">@dimen/dimen_text_OG</item>
    </style>

    <style name="StyleCurrencyEditTextBig" parent="StyleCurrentEditText">
        <item name="android:textSize">@dimen/dimen_text_mediano</item>
    </style>








    <!--MENU STYLES-->
    <style name="StyleMenuCardView">
        <item name="contentPadding">@dimen/dimen_nav_title_padding</item>

        <item name="android:layout_marginTop">@dimen/dimen_nav_cardview_margin</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StyleMenuTitle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StyleMenuFab">
        <item name="android:visibility">invisible</item>
        <item name="fabSize">mini</item>
        <item name="android:scaleType">center</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:layout_marginRight">@dimen/dimen_nav_fab_margin_hor</item>
        <item name="android:layout_marginEnd">@dimen/dimen_nav_fab_margin_hor</item>
        <item name="android:layout_marginLeft">@dimen/dimen_nav_fab_margin_hor</item>
        <item name="android:layout_marginStart">@dimen/dimen_nav_fab_margin_hor</item>

        <item name="android:layout_marginTop">@dimen/dimen_nav_fab_margin_ver</item>
        <item name="android:layout_marginBottom">@dimen/dimen_nav_fab_margin_ver</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="SourceDialogTheme" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    
    <style name="StyleSourceMasterAddToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/darkest_grey</item>
    </style>

</resources>
